{
    "compilerOptions": {
        "target": "es2022",
        "useDefineForClassFields": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": false, // false to remove error from @supabase/auth-js
        "noPropertyAccessFromIndexSignature": false, // false to remove error from @supabase/auth-js
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@pages/*": ["apps/propertea/src/app/pages/*"],
            "@services/*": ["apps/propertea/src/app/services/*"],
            "@stores/*": ["apps/propertea/src/app/stores/*"],
            "@factories/*": ["apps/propertea/src/app/factories/*"],
            "@data-services/*": ["apps/propertea/src/app/data-services/*"],
            "@schema/*": ["apps/propertea/db/*"],
        }
    },
    "files": [],
    "include": [],
    "references": [
        {
            "path": "./tsconfig.editor.json"
        },
        {
            "path": "./tsconfig.app.json"
        },
        {
            "path": "./tsconfig.spec.json"
        }
    ],
    "extends": "../../tsconfig.base.json",
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}
