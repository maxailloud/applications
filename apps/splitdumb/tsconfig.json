{
    "compilerOptions": {
        "target": "es2022",
        "useDefineForClassFields": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@pages/*": ["apps/splitdumb/src/app/pages/*"],
            "@services/*": ["apps/splitdumb/src/app/services/*"],
            "@stores/*": ["apps/splitdumb/src/app/stores/*"],
            "@factories/*": ["apps/splitdumb/src/app/factories/*"],
            "@interfaces/*": ["apps/splitdumb/src/app/interfaces/*"],
            "@enums/*": ["apps/splitdumb/src/app/enums/*"],
            "@forms/*": ["apps/splitdumb/src/app/forms/*"],
            "@data-services/*": ["apps/splitdumb/src/app/data-services/*"],
            "@resolvers/*": ["apps/splitdumb/src/app/resolvers/*"],
            "@components/*": ["apps/splitdumb/src/app/components/*"],
            "@schema/*": ["apps/splitdumb/db/*"]
        }
    },
    "files": [],
    "include": [],
    "references": [
        {
            "path": "./tsconfig.editor.json"
        },
        {
            "path": "./tsconfig.app.json"
        },
        {
            "path": "./tsconfig.spec.json"
        }
    ],
    "extends": "../../tsconfig.base.json",
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}
